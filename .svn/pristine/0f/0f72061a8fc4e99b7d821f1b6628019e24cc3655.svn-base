/* pages/login/login.wxss */
.login{
  width: 100%;
  padding-top: 80rpx;
}
.register{
  width: 100%;
  font-size: 24rpx;
  color: #676A6C;
  text-align: right;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.loginBox{
  width: 100%;
  margin-top: 100rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  box-sizing: border-box;
}
.loginTab{
  text-align: center;
  margin-bottom: 40rpx;
}
.loginTab text{
  display: inline-block;
  font-size: 24rpx;
  color: #090B0D;
}
.loginTab text:first-child{
  margin-right: 64rpx;
}
.loginTab text.current{
  color: #518cee;
  border-bottom: 1px solid #518cee;
}
.loginItem{
  display: flex;
  width: 100%;
  height: 88rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #e8e8e8;
}
.loginItem .icon{
  width: 44rpx;
  height: 44rpx;
  margin-top: 22rpx;
}
.loginItem input{
  display: inline-block;
  width: 360rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  margin-left: 34rpx;
}
.loginItem .eyeIcon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 24rpx;
}
.loginBtn{
  background-color: #518cee;
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 66rpx;
  border-radius: 72rpx;
}
.wechatBtn{
  background-color: #2f9833;
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
  border-radius: 72rpx;
}
.customer{
  text-align: center;
  font-size: 28rpx;
  color: #4986EC;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 30rpx;
}








