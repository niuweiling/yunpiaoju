/* pages/forum/buy/buy.wxss */
.content{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}
.title{
  background-color: #fff;
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.title input{
  font-size: 28rpx;
  color: #101010;
}
.write{
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
  margin-top: 24rpx;
  box-sizing: border-box;
}
.write textarea{
  font-size: 24rpx;
  color: #101010;
}
.send{
  display: block;
  background-color: #518CEE;
  width: 460rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 40rpx;
  border-radius: 72rpx;
}
