/* pages/forum/reply/reply.wxss */
.content{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}
.write{
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.write textarea{
  font-size: 24rpx;
  color: #101010;
}
.imgBox{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.imgBox .img{
  width: 114rpx;
  height: 114rpx;
  margin-top: 20rpx;
}
.send{
  display: block;
  background-color: #518CEE;
  width: 460rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 40rpx;
  border-radius: 72rpx;
}