/* pages/news/news.wxss */
.container{
  padding:0 2%;
  height:100%;
  background:#fff;
}
.news-row{
  width:100%;
  height:200rpx;
  padding:20rpx 0;
  overflow: hidden;
  border-bottom:#e8e8e8 solid 1px;
}
.news-row image{
  float:left;
  width:200rpx;
  height:200rpx;
}
.news-row view{
  float:left;
  margin-left:20rpx;
  width:500rpx;
}
.news-row view.wd{
  display: block;
  margin-left:0;
  width:100%;
  height: 95rpx;
  line-height:45rpx;
  overflow:hidden;
  color:#666;
  font-size:30rpx;
  
}
.news-row view text.title{
  display: block;
  width:100%;
  height:70rpx;
  line-height:70rpx;
  font-size:36rpx;
  color:#333;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
