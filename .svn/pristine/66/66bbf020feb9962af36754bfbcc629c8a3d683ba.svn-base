/* 点赞动画 */

.animate1 {
  animation: scaleDraw1 0.5s ease-in-out;
}

.animate2 {
  animation: scaleDraw2 0.5s ease-in-out;
}

/* 点赞动画效果 */

@keyframes scaleDraw1 {
  0% {
    top: 0px;
    opacity: 1;
  }

  10% {
    top: -6px;
    opacity: 0.9;
  }

  20% {
    top: -12px;
    opacity: 0.8;
  }

  30% {
    top: -15px;
    opacity: 0.7;
  }

  40% {
    top: -18px;
    transform: rotate(12deg);
    opacity: 0.6;
  }

  50% {
    top: -21px;
    transform: rotate(24deg);
    opacity: 0.5;
  }

  60% {
    top: -24px;
    transform: rotate(12deg);
    opacity: 0.4;
  }

  70% {
    top: -27px;
    transform: rotate(0deg);
    opacity: 0.3;
  }

  80% {
    top: -30px;
    transform: rotate(-12deg);
    opacity: 0.2;
  }

  90% {
    top: -33px;
    transform: rotate(-24deg);
    opacity: 0.1;
  }

  100% {
    top: -36px;
    transform: rotate(-12deg);
    opacity: 0;
  }
}

@keyframes scaleDraw2 {
  0% {
    top: -36px;
    transform: rotate(-12deg);
    opacity: 0;
  }

  10% {
    top: -33px;
    transform: rotate(-24deg);
    opacity: 0.1;
  }

  20% {
    top: -30px;
    transform: rotate(-12deg);
    opacity: 0.2;
  }

  30% {
    top: -27px;
    transform: rotate(0deg);
    opacity: 0.3;
  }

  40% {
    top: -24px;
    transform: rotate(12deg);
    opacity: 0.4;
  }

  50% {
    top: -21px;
    transform: rotate(24deg);
    opacity: 0.5;
  }

  60% {
    top: -18px;
    transform: rotate(12deg);
    opacity: 0.6;
  }

  70% {
    top: -15px;
    opacity: 0.7;
  }

  80% {
    top: -12px;
    opacity: 0.8;
  }

  90% {
    top: -6px;
    opacity: 0.9;
  }

  100% {
    top: 0px;
    opacity: 1;
  }
}

