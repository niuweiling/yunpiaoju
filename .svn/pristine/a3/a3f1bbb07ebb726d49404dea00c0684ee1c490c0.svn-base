.content {
    font-family: "Microsoft YaHei";
   
    overflow:hidden;
    width: 100%;
}
.layout-top{
    width: 100%;
}
.layout-bottom{
    width: 100%;
}
.screen {
    background-color: #39383d;
    text-align: right;
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    padding-right:10rpx;
    font-size: 50px;
     color: #fff;
    box-sizing: border-box;
    border-top: 1px solid #39383d;
    word-break:break-all;
}
.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;

    background-color: #fff;
    font-size: 30px;

}
.item {
    width:25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 1px;
    margin-right: 1px;
    height: 93px; 
    line-height: 93px;
}
.blue:active {
 background-color: #4a4b4f;   
}
.orange:active {
 background-color: #f51313;   
}
.orange {
    color: #fff;
    background: #fd3636;
    font-weight: bold;
}
.blue {
    color:#fff;
    background-color: #383943;
}
.gray{background-color: #e6e6e6;}
.red1{background-color: #f16969;color: #fff;}
.item1{width: 50%;display: flex;align-items: center;flex-direction: column;justify-content: center;margin-top: 1px;margin-right: 1px;  height:78px; 
    line-height:78px;}

.none{
    display: none;
}