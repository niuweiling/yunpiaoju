/* pages/my/my.wxss */
body{
  height: 100%;
  background: #efeff4;
}
.zyyw{
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.content{
  /* height: 100%; */
  /* background: #efeff4; */
  padding: 20rpx;
  box-sizing: border-box; 
}
.top{
  width: 100%;
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  box-shadow: 10rpx -10rpx 100rpx rgba(0, 0, 0, 0.2)
}
.top-item{
  padding: 20rpx;
  border-bottom: solid #e6e6e6 1px;
}
.left{
  width: 75%;
  margin-left: 20rpx;
}
.center{
  width: 15%;
}
.right{
  width: 10%;
}
.left text{
  display: block;
}
.l1{
  font-size: 32rpx;
  color: #101010;
}
.l2{
  font-size: 28rpx;
  color: #757375;
  margin-top: 20rpx;
}
.my-img{
  width: 92rpx;
  height: 92rpx;
  margin-top: 28rpx;
  border-radius: 100%;
}
.my-next{
  display: block;
  width: 12rpx;
  height: 24rpx;
  margin: 60rpx auto 0;
}
.bottom-list{
  width: 33.33%;
  padding: 10rpx 0 20rpx;
}
.bottom-list text{
  display: block;
  font-size: 28rpx;
  color: #757375;
  text-align: center;
  margin-top: 10rpx;
}
.list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: solid #e6e6e6 1px;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative
}
.xjjl{
  width: 36rpx;
  height: 36rpx;
  margin-top: 24rpx;
  margin-right: 30rpx;
}
.list text{
  font-size: 28rpx;
  color: #757375;
}
.next{
  width: 12rpx;
  height: 24rpx;
  position: absolute;
  right: 20rpx;
  top: 24rpx
}
#number{
  color: #83AAE6;
  position: absolute;
  right: 0;
  margin-right: 24rpx;
  text-decoration: underline;
}
.btn{
  background: #8797ED;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 200rpx;
}

.yyzh{
  width: 526rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #518cee;
  font-size: 28rpx;
  color: #fff;
  margin-top: 67rpx;
}
.mylogout{
  background-color: #518cee;
  width: 520rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 200rpx;
  border-radius: 72rpx;
}