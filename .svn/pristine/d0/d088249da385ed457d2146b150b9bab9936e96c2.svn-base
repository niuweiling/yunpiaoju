/* 底部 */
.foot{
  background-color: #fff;
  width: 100%;
  padding: 30rpx;
  border-top: 1px solid #e6e6e6;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
}
.foot .footContent{
  width: 480rpx;
}
.foot input{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #676A6C;
  padding-left: 20rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}
.foot .footImgShow{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.footImgShow image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 10rpx;
}
.foot text{
  background-color: #518CEE;
  width: 92rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  margin-right: 40rpx;
  border-radius: 8rpx;
}
.foot .footImg{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}


