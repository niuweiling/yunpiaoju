/* pages/forum/forum.wxss */
.content{
  width: 100%;
  padding: 20rpx 20rpx 120rpx;
  box-sizing: border-box;
}
.model{
  background-color: #fff;
  width: 100%;
  min-height: 432rpx;
  padding: 10rpx 30rpx 40px;
  box-sizing: border-box;
  position: fixed;
  top:0;
  left: 0;
}
.detailImg{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  
  justify-content: flex-start;
}
.detailImg image{
  width: 33.3%;
  margin-left: 20rpx;
}
.top{
  overflow: hidden;
}
.top image{
  float: left;
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  border-radius: 100%;
}
.username{
  float: left;
  width: 550rpx;
  font-size: 24rpx;
}
.times{
  float: left;
  font-size: 24rpx;
  margin-top: 5rpx;
}
.info{
  margin-top: 10rpx;
}
.info .infoTitle{
  font-size: 28rpx;
  color: #101010;
}
.info .infoItem{
  line-height: 40rpx;
  font-size: 24rpx;
}
.info .infoImg{
  width: 200rpx;
  height: 160rpx;
  margin-top: 20rpx;
}
.infoTab{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  position: absolute;
  bottom: 20rpx;
}
.infoTabItem{
  flex: 1;
  /* text-align: center; */
  /* margin-left: -30rpx; */
}
.infoTabItem image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.infoTabItem text{
  font-size: 24rpx;
  color: #101010;
}

/* 点赞动画 */
.animate {
  animation: scaleDraw 1s ease-in-out;
}
/* 点赞动画效果 */
@keyframes scaleDraw {
  0% {
      top:0px; 
  }
  10% {
      top:-6px; 
  }
  20% {
      top:-12px; 
  }
  30% {
      top:-15px; 
  }
  40% {
      top:-18px; 
      transform: rotate(12deg);
  }
  50% {
      top:-21px; 
      transform: rotate(24deg);
  }
  60% {
      top:-24px; 
      transform: rotate(12deg);
  }
  70% {
      top:-27px;
      transform: rotate(0deg);
  }
  80% {
      top:-30px;
      transform: rotate(-12deg);
  }
  90% {
      top:-33px;
      transform: rotate(-24deg);
  }
  100% {
      top:-36px;
      transform: rotate(-12deg);
  }
}

/* 全部评论 */
.all{
  padding-top: 480rpx;
}
.allTitle{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #101010;
  padding-left: 10rpx;
  box-sizing: border-box;
}
