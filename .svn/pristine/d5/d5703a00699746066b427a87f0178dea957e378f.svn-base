/* pages/shouye/index/index.wxss */
/* 搜索 */
.wrapper{
  height: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
  position: relative;
}
.searchBox{
  background-color: #518CEE;
  height: 280rpx;
  padding: 30rpx 20rpx 0;
  box-sizing: border-box;
  position: relative;
}
.search{
  background-color: #FFFFFF;
  width: 100%;
  height: 70rpx;
  text-align: center;
  border: 1px solid #E5E5E5;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;/*这里可以不写，flex布局默认方向横向即row*/
  justify-content: center;
  align-items: center;
}
.search image{
  float: left;
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.search text{
  font-size: 20rpx;
  color: #676A6C;
}
/* 导航 */
.fixed{
  background-color: #fff;
  width: 710rpx;
  height: 260rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 110rpx;
  left: 20rpx;
}
.fixedItem{
  width: 25%;
}
.fixedItem image{
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}
.fixed text{
  display: block;
  line-height: 46rpx;
  font-size: 20rpx;
  color: #090B0D;
  text-align: center;
}

/* 热点时讯 */
.hot{
  background-color: #fff;
  height: 220rpx;
  line-height: 60rpx;
  padding-top: 140rpx;
  border-bottom: 20rpx solid #f5f5f5;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around
}
.hotLeft text{
  font-size: 28rpx;
  color: #101010;
  font-weight: bold;
}
.hotLeft image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 5rpx;
}
.hotCenter{
  width: 410rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.hotCenter text{
  display: block;
  width: 410rpx;
  font-size: 24rpx;
  color: #101010;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.hotRight{
  line-height: 60rpx;
  font-size: 20rpx;
  color: #374966;
}

/* 列表展示 */
.container{
  background-color: #fff;
  width: 100%;
  padding-bottom: 70px;
  box-sizing: border-box;
}
.title{
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.title .titleTxt{
  font-size: 28rpx;
  color: #101010;
  font-weight: bold;
  border-bottom: 1px solid #e8e8e8;
  box-sizing: border-box;
}
.content{
  width: 100%;
  padding: 20rpx 34rpx 110rpx;
  /* padding: 20rpx 30rpx 110rpx; */
  border-bottom: 20rpx solid #f5f5f5;
  box-sizing: border-box;
  position: relative;
}
.top{
  overflow: hidden;
}
.top image{
  float: left;
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.shareflex{
  display: flex;
  justify-content: space-between;
}
.username{
  float: left;
  width: 580rpx;
  font-size: 24rpx;
}
.share{
  width: 150rpx;
  font-size: 24rpx;
  text-align: end;
  color: #518CEE;
}
.times{
  float: left;
  font-size: 24rpx;
  margin-top: 5rpx;
}
.info{
  margin-top: 10rpx;
}
.info .infoTitle{
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 28rpx;
  color: #101010;
  text-align: start;
}
.info .infoItem{
  line-height: 40rpx;
  font-size: 24rpx;
 
}
.imgflex{
  display: flex;
  flex-wrap: wrap;
  justify-content:flex-start;
}
.info .infoImg{
  /* width: 214rpx; */
  /* height: 160rpx; */
  width: 150rpx;
  height: 150rpx;
  margin-top: 12rpx;
  padding-right: 12rpx;
}
.info .infoImg:nth-child(3n){
  width: 150rpx;
  height: 150rpx;
  padding-right: 25%;
  margin-top: 12rpx;
}
.infoTab{
  width: 100%;
  margin-top: 34rpx;
  display: flex;
  position: absolute;
}
.infoTabItem{
    flex: 1;
    padding-right: 106rpx;
}
.infoTabItem:nth-child(3){
  flex: 1;
  padding-right: 0rpx;
}
.infoTabItem image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.infoTabItem text{
  font-size: 24rpx;
  color: #101010;
}
.noData{
  line-height: 70rpx;
  color: #999;
  text-align: center;
}
.fixedTxt{
  font-size: 24rpx;
  color: #101010;
  /* margin-top: 20rpx; */
}

/* 点赞动画 */
.animate1 {
  animation: scaleDraw1 0.5s ease-in-out;
}

.animate2 {
  animation: scaleDraw2 0.5s ease-in-out;
}

/* 点赞动画效果 */

@keyframes scaleDraw1 {
  0% {
    top: 0px;
    opacity: 1;
  }

  10% {
    top: -6px;
    opacity: 0.9;
  }

  20% {
    top: -12px;
    opacity: 0.8;
  }

  30% {
    top: -15px;
    opacity: 0.7;
  }

  40% {
    top: -18px;
    transform: rotate(12deg);
    opacity: 0.6;
  }

  50% {
    top: -21px;
    transform: rotate(24deg);
    opacity: 0.5;
  }

  60% {
    top: -24px;
    transform: rotate(12deg);
    opacity: 0.4;
  }

  70% {
    top: -27px;
    transform: rotate(0deg);
    opacity: 0.3;
  }

  80% {
    top: -30px;
    transform: rotate(-12deg);
    opacity: 0.2;
  }

  90% {
    top: -33px;
    transform: rotate(-24deg);
    opacity: 0.1;
  }

  100% {
    top: -36px;
    transform: rotate(-12deg);
    opacity: 0;
  }
}

@keyframes scaleDraw2 {
  0% {
    top: -36px;
    transform: rotate(-12deg);
    opacity: 0;
  }

  10% {
    top: -33px;
    transform: rotate(-24deg);
    opacity: 0.1;
  }

  20% {
    top: -30px;
    transform: rotate(-12deg);
    opacity: 0.2;
  }

  30% {
    top: -27px;
    transform: rotate(0deg);
    opacity: 0.3;
  }

  40% {
    top: -24px;
    transform: rotate(12deg);
    opacity: 0.4;
  }

  50% {
    top: -21px;
    transform: rotate(24deg);
    opacity: 0.5;
  }

  60% {
    top: -18px;
    transform: rotate(12deg);
    opacity: 0.6;
  }

  70% {
    top: -15px;
    opacity: 0.7;
  }

  80% {
    top: -12px;
    opacity: 0.8;
  }

  90% {
    top: -6px;
    opacity: 0.9;
  }

  100% {
    top: 0px;
    opacity: 1;
  }
}

