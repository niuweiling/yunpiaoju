/* pages/counter/next/next.wxss */
page{
  background: #f8f8f8;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}
.nav{
  line-height: 70rpx;
  display: flex;
  flex-direction: row
}
.nav view{
  flex: 1;
  font-size: 28rpx;
  text-align: center
}
.nav view text{
  padding: 0 10rpx 10rpx;
}
.nav view text.cur{
  color: #518cee;
  border-bottom: solid 2px #518cee
}

.content{
  background: #fff;
  width: 100%;
  padding: 0 20rpx 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box
}
.title{
  display: block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  padding-top: 20rpx;
  position: relative
}
.title::before,.title::after{
  content: '';
  width: 250rpx;
  height: 0;
  border: 2rpx #bbb dashed;
  position: absolute;
  top: 40rpx;
}
.title::before{
  right: 0;
}
.title::after{
  left: 0;
}

/* 一排两个 */
.avg{
  display: flex;
  flex-wrap: wrap;
}
.avg .avgInfo{
  width: 50%;
  margin-top: 30rpx;
}
.avgInfo .avgTxt{
  font-size: 24rpx;
}
.avgInfo .avgInput{
  background: #f8f8f8;
  width: 300rpx;
  height: 60rpx;
  border: solid 1px #bbb;
  margin-top: 10rpx;
  border-radius: 10rpx;

}
.avgInfo .avgInput.avgSmall{
  float: left;
  width: 230rpx;
  margin-right: 10rpx;
}
.avgInfo>image{
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.avgInput input, .avgInput picker {
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  font-size: 24rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}

/* 两个按钮 */
.btn{
  text-align: center;
  margin-top: 20rpx;
}
.btn button{
  display: inline-block;
  width: 284rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
}
.btn button.empty{
  background: #fe5a00;
  margin-right: 50rpx;
}
.btn button.count{
  background: #518cee
}

/* 结果 */
.result{
  background: #e6e6e6;
  width: 100%;
  padding: 0 20rpx 20rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}
.result .resList{
  font-size: 24rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.resList .resTxt{
  float: left
}
.resList .resCount{
  float: right
}
.copy{
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  margin-top: 40rpx;
}