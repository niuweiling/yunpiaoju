/* pages/class/class.wxss */
.container {
	background: #fff;
	padding: 0 0 70rpx 20rpx;
}

.row {
	width: 100%;
	height: 200rpx;
	padding: 20rpx 0;
	overflow: hidden;
}

.row image {
	float: left;
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
}

.row view {
	float: left;
	margin-left: 20rpx;
	padding-right: 10rpx;
	width: 500rpx;
}

.border {
	padding-bottom: 20rpx;
	border-bottom: #d8d8d8 solid 1px;
}

.row view.wd {
	display: -webkit-box;
	margin-left: 0;
	width: 100%;
	height: 80rpx;
	line-height: 40rpx;
	overflow: hidden;
	color: #333;
	font-size: 24rpx;
	text-indent: 2em;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-column-clamp: 2;
	text-overflow: ellipsis;

}

.row view text.title {
	display: block;
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 32rpx;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.row view view.binfor {
	color: #716c6c;
	font-size: 24rpx;
	margin-left: 0;
	margin-top: 10rpx;
}

.row view view.binfor text {
	padding: 0 10rpx;
}

.record {
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	font-size: 28rpx;
	background: #fff;
	border-top: #d8d8d8 solid 1px;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
}

.bodyX {
	padding-bottom: 164rpx;
}
