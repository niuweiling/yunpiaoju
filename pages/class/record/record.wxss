/* pages/class/record/record.wxss */
.container {
	background: #fff;
	padding: 0 0 70rpx 20rpx;
}

.edit {
	font-size: 24rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: right;
	padding: 0 20rpx;
}

.row {
	width: 100%;
	height: 200rpx;
	padding: 20rpx 0;
	overflow: hidden;
	position: relative;
}

.row image {
	float: left;
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
}

.row view {
	float: left;
	margin-left: 20rpx;
	padding-right: 10rpx;
	width: 500rpx;
}

.border {
	padding-bottom: 20rpx;
	border-bottom: #d8d8d8 solid 1px;
}

.row view.wd {
	display: -webkit-box;
	margin-left: 0;
	width: 100%;
	height: 80rpx;
	line-height: 40rpx;
	overflow: hidden;
	color: #333;
	font-size: 24rpx;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-column-clamp: 2;
	text-overflow: ellipsis;

}

.row view text.title {
	display: block;
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 32rpx;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.row view view.binfor {
	color: #716c6c;
	font-size: 24rpx;
	margin-left: 0;
	margin-top: 10rpx;
}

.row view view.binfor text {
	padding: 0 10rpx;
}

.row icon {
	position: absolute;
	top: 85rpx;
	left: 85rpx;
	z-index: 12;
	opacity: .8;
}

.option {
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	position: fixed;
	left: 0;
	bottom: 0;
	right: 0;
	background: #fff;
	border-top: #d8d8d8 solid 1px;
	font-size: 28rpx;
}

.tc {
	text-align: center;
}

.optbtn view {
	float: left;
	width: 50%;
	text-align: center;
}

.optbtn view:nth-child(1) {
	color: #ef5a00;
}

.optbtn view:nth-child(2) {
	background: #ccc;
	color: #fff;
}

.nodata {
	height: .8rem;
	line-height: .8rem;
	font-size: 28rpx;
}
