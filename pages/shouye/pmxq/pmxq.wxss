.top {
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	background: #fff;
	position: fixed;
	top: 0;
	font-size: 32rpx;
	color: #101010;
	text-align: center;
	z-index: 3
}

.top-btn {
	width: 20rpx;
	height: 10rpx;
}

.top-btn.rotateRight {
	transform: rotate(180deg);
}

.top-content {
	width: 406rpx;
	height: 300rpx;
	background: rgba(81, 140, 238, 1);
	position: fixed;
	top: 111rpx;
	left: 50%;
	transform: translateX(-50%);
	z-index: 100;
	padding: 20rpx;
	box-sizing: border-box;
}

.top-content::after {
	content: "";
	position: absolute;
	left: 50%;
	top: -20rpx;
	width: 0;
	height: 0;
	border-width: 10rpx;
	border-style: solid;
	border-color: transparent transparent #518cee transparent;
	transform: translateX(-50%)
}

.top-list {
	width: 100%;
	height: 70rpx;
